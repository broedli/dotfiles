#!/usr/bin/env bash




msg(){
    echo "$(tput bold)$(tput setaf 4)>>$(tput sgr0) ${@}"
}

err(){
    echo "$(tput bold)$(tput setaf 1)!!$(tput sgr0) ${@}"
}

ask() {
  # http://djm.me/ask
  while true; do

    if [ "${2:-}" = "Y" ]; then
      prompt="Y/n"
      default=Y
    elif [ "${2:-}" = "N" ]; then
      prompt="y/N"
      default=N
    else
      prompt="y/n"
      default=
    fi

    # Ask the question
    read -p "$(tput bold)$(tput setaf 3)?$(tput sgr0) $1 ($prompt): " REPLY

    # Default?
    if [ -z "$REPLY" ]; then
       REPLY=$default
    fi

    # Check if the reply is valid
    case "$REPLY" in
      Y*|y*) return 0 ;;
      N*|n*) return 1 ;;
    esac

  done
}

if [ "$(id -u)" = "0" ]; then
    err "Can't run as root. Aborting."
    exit 2
fi

if [ ! /usr/bin/pacaur ]; then
    msg "installing pacaur ..."
    mkdir -pv ~/tmp && cd ~/tmp
    if [ ! /usr/bin/cower ]; then
        msg "cower not found. installing cower first ..."
        curl -O https://aur.archlinux.org/cgit/aur.git/snapshot/cower.tar.gz && tar zxvf cower.tar.gz
        cd cower && gpg --keyserver pgp.mit.edu --recv-keys F56C0C53 && makepkg -si && cd ~/tmp
    fi
    curl -O https://aur.archlinux.org/cgit/aur.git/snapshot/pacaur.tar.gz && tar zxvf pacaur.tar.gz
    cd pacaur && makepkg -si && cd ~/
    msg "cleaning up ...
"
    rm -r ~/tmp
fi

laptop_dependencies() {
    msg "Installing drivers and X11 ..."
    sleep 2
    pacaur --noconfirm --noedit -S \
    blueman \
    bluez \
    bluez-utils \
    mesa \
    network-manager-applet \
    pulseaudio \
    pulseaudio-alsa \
    pulseaudio-bluetooth \
    xf86-input-mouse \
    xf86-video-intel \
    xorg-server \
    xorg-server-common \
    xorg-server-utils \
    xorg-xcalc \
    xorg-xinit
}

desktop_dependencies() {
    msg "Installing drivers and X11 ..."
    sleep 2
    pacaur --noconfirm --noedit -S \
    ifenslave \
    intel-ucode \
    nvidia \
    nvidia-libgl \
    nvidia-settings \
    nvidia-utils \
    pulseaudio \
    pulseaudio-alsa \
    xf86-input-mouse \
    xorg-server \
    xorg-server-common \
    xorg-server-utils \
    xorg-xinit
    ask "Copy xorg config to /etc/X11?" && sudo mv /etc/X11/xorg.conf /etc/X11/xorg.orig && sudo cp xorg.conf /etc/X11/xorg.conf
    msg "You should consider a REBOOT after you are done."
}

ask "Install Laptops dependencies?" N && laptop_dependencies

ask "Install Workstation's dependencies?" N && desktop_dependencies

msg "Installing filesystem drivers ..."
sleep 2
pacaur --noconfirm --noedit -S \
    btrfs-progs \
    cryptsetup \
    ecryptfs-utils \
    exfat-utils \
    gvfs-mtp \
    gvfs-nfs \

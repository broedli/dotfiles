msg "Installing terminals ..."
pacaur --noconfirm --noedit -S \
    antigen-git \
    bash-completion \
    rxvt-unicode \
    termite \
    termite-terminfo \
    tmux \
    urxvt-perls-git \
    zsh \
    zsh-completions \
    highlight

msg "Installing Python and i3-WM dependencies ..."
pacaur --noconfirm --noedit -S \
    flex \
    libev \
    perl-anyevent-i3 \
    perl-json-xs \
    pygmentize \
    python \
    python-basiciw \

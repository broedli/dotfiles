#!/bin/bash
if [ -e /usr/bin/nvidia-smi ]; then
    temp1=$(nvidia-smi -q -d TEMPERATURE -i 0 | awk '/GPU Current Temp/ {print $5}')
    temp2=$(nvidia-smi -q -d TEMPERATURE -i 1 | awk '/GPU Current Temp/ {print $5}')
else
    temp1=$(sensors | grep GPU | awk '{print $2}' | sed 's/[+,째,C]//g')
    if [ $temp1 -gt 52 ]; then
        echo "<span color='#c4a500'>$temp1째C</span>"
    elif [ $temp1 -gt 75 ]; then
        echo "<span color='#b84131'>$temp1째C</span>"
    else
        echo "<span color='#7da900'>$temp1째C</span>"
    fi
else
